<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/joinusbg"
    tools:context=".views.DashBoard.RegisterUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/allot"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/allot"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:alpha="0.9"
            android:layout_gravity="center"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/team_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/team_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/team"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner"
                android:layout_marginLeft="10dp">

                <Spinner
                    android:id="@+id/teamSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColorHint="#ffffff"
                    android:spinnerMode="dropdown"
                    android:entries="@array/team_array"
                    android:prompt="@string/team_prompt"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

                android:id="@+id/member_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/member"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/user_name_icon"
                    app:tint="@color/white" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/spinner"
                android:hint="Search Member"
                android:fontFamily="@font/calibri"
                android:textColorHint="@color/black"
                android:padding="0dp"
                android:paddingStart="8dp"
                android:textSize="18sp"
                android:id="@+id/memberText"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/type_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/assetType"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/role"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner"
                android:layout_marginLeft="10dp">

                <Spinner
                    android:id="@+id/typeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColorHint="#ffffff"
                    android:spinnerMode="dropdown"
                    android:entries="@array/asset_type_array"
                    android:prompt="@string/type_prompt"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/model_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/model"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/model"
                app:tint="@color/white" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/spinner"
                android:hint="Search Model"
                android:fontFamily="@font/calibri"
                android:textColorHint="@color/black"
                android:padding="0dp"
                android:paddingStart="8dp"
                android:textSize="18sp"
                android:id="@+id/modelText"/>


        </LinearLayout>


        <Button
            android:id="@+id/button"
            android:layout_width="210dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/buttonshape2"
            android:fontFamily="@font/gotham"
            android:text="Allot"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>



